<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/layout_people"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_options"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:src="@drawable/ic_more_vert_24dp"
        android:layout_alignParentRight="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image_avatar"
        android:layout_width="72dp"
        android:layout_height="56dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:src="@drawable/ic_account_circle_24dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/image_options"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="1"
        tools:text="Ariful Hoque Maruf"
        android:layout_toRightOf="@id/circular_image_avatar"/>
</RelativeLayout>