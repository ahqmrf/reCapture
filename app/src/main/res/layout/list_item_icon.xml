<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="72dp"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/loading"/>

        <LinearLayout
            android:id="@+id/linear_progressbar"
            android:layout_width="72dp"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateDrawable="@drawable/circular_progress_drawable"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_select"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/circular_red_bg_item_gallery"
            android:src="@drawable/ic_done_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/text_file_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_select"
            android:layout_toRightOf="@id/image_main"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:gravity="center_vertical"
            tools:text="something"
            android:textSize="8sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>