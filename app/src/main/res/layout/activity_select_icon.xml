<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="apps.ahqmrf.recapture.activity.SelectIconActivity">

    <TextView
        android:id="@+id/text_memory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Select in icon for this memory"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_icon_list"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_memory_title"
        android:layout_above="@+id/btn_next"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_ripple"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
