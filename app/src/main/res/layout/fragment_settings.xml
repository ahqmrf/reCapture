<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.ahqmrf.recapture.fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_username"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_account"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_account_circle_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_account"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Username"/>

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="Ariful Hoque Maruf"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="8dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_quote"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_quote"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_favorite_black_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_quote"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Favorite Quote"/>

                <TextView
                    android:id="@+id/text_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="I am the only one who loves more.. and this is my thing.."/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="8dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_about"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_about"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="About"/>

                <TextView
                    android:id="@+id/text_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="I am a very simple person with complications :v But I think I am good enough! :)"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="8dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_lock"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_lock"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_lock_outline_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_lock"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/simpleSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Lock mode"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    tools:checked="true"
                    android:gravity="start|center_vertical"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="8dp"
            android:background="@color/whitey_grey"/>


        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_pass"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_vpn_key_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_pass"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Change password"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    tools:checked="true"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
