<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context="apps.ahqmrf.recapture.fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                tools:src="@drawable/ic_account_circle_24dp"/>

            <LinearLayout
                android:id="@+id/linear_progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:indeterminateDrawable="@drawable/circular_progress_drawable"/>

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            tools:text="Ariful Hoque Maruf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_username"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_account"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/black"
                android:src="@drawable/ic_account_circle_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_account"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Username"/>

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="Ariful Hoque Maruf"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_quote"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_quote"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_favorite_black_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_quote"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Favorite Quote"/>

                <TextView
                    android:id="@+id/text_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="I am the only one who loves more.. and this is my thing.."/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitey_grey"/>

        <RelativeLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_about"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:tint="@color/black"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_about"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="About"/>

                <TextView
                    android:id="@+id/text_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="16dp"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    tools:text="I am a very simple person with complications :v But I think I am good enough! :)"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
