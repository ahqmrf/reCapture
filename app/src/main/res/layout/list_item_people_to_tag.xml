<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="18dp"
        android:src="@drawable/ic_check_box_outline_blank_red_24dp"
        android:layout_alignParentRight="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image_avatar"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:src="@drawable/ic_account_circle_24dp"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_toLeftOf="@id/image_check"
        android:layout_toRightOf="@id/circular_image_avatar">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="Ariful Hoque Maruf" />

        <TextView
            android:id="@+id/text_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="Friend" />

    </LinearLayout>

</RelativeLayout>