<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.ahqmrf.recapture">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ReCapture"
        android:allowBackup="true"
        android:icon="@drawable/re_capture"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TabActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreateMemoryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.GalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TabActivityTheme" />
        <activity
            android:name=".activity.SelectIconActivity"
            android:label="Select icon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TagPeopleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddUserActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.SingleImageSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TabActivityTheme" />
        <activity
            android:name=".activity.MemoryViewActivity"
            android:label="Memory"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ImageFullScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DialogActivity.Transparent" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:label="Edit Profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="View Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditUserActivity"
            android:screenOrientation="portrait"
            android:label="Edit user profile"/>
    </application>

</manifest>